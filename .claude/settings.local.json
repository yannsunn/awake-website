{
  "permissions": {
    "allow": [
      // Git Operations - Version control management
      "Bash(git:*)",
      
      // GitHub CLI - Repository and PR management
      "Bash(gh:*)",
      
      // NPM Commands - Build and development
      "Bash(npm start)",
      "Bash(npm run:*)",
      
      // File Operations - Essential file manipulation
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(rm:*)",
      "Bash(find:*)",
      
      // Search Tools - Content search and analysis
      "Bash(grep:*)",
      "Bash(rg:*)",
      
      // System Commands - Basic system operations
      "Bash(true)",
      "Bash(sudo apt:*)",
      
      // Web Access - External resource fetching
      "WebFetch(domain:github.com)",
      "WebFetch(domain:awake-website.netlify.app)"
    ]
  },
  "enableAllProjectMcpServers": false
}