generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  company   String?
  service   String
  message   String
  status    String   @default("new") // "new", "contacted", "completed"
  createdAt DateTime @default(now())
  
  @@map("inquiries")
}

model PageView {
  id        Int      @id @default(autoincrement())
  pagePath  String
  referrer  String?
  createdAt DateTime @default(now())
  
  @@map("page_views")
}
